[Unit]
Description=Run fastapi application
After=network.target

[Service]
User=alanmiranda
Group=alanmiranda
WorkingDirectory=/home/alanmiranda/app/src
Environment="PATH=/home/alanmiranda/app/venv/bin"
ExecStart=/home/alanmiranda/app/venv/bin/gunicorn -w 4 -k uvicorn.workers.UvicornWorker app.main:app --bind 0.0.0.0:8080

[Install]
WantedBy=multi-user.target